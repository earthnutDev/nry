{
  "name": "nry",
  "version": "1.0.1",
  "type": "module",
  "private": true,
  "description": "更替及管理 npm、yarn、pnpm registry",
  "scripts": {
    "prepublishOnly": "pjj",
    "push": "gvv",
    "push:version": "gvv",
    "vjj": "vjj",
    "prepare": "husky",
    "diff": "jja pkg --diff=淘宝",
    "eslint": "jja cls && eslint packages",
    "b": "rollup --config rollup.config.js",
    "b:dev": "jja run dev=true pnpm rollup --config rollup.config.js",
    "build": "jja cls rm dist && pnpm run b && pnpm run clean:package",
    "clean:package": "node scripts/clean-package-json.js",
    "dev": "pnpm test",
    "test": "pnpm run b:dev && jja run nry_dev=all a_node_tools_dev=false  node ./dist/bin.mjs",
    "prettier": "jja cls && prettier . --write"
  },
  "license": "MIT",
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@qqi/check-version": "^1.0.5",
    "@qqi/rollup-external": "^1.0.11",
    "@rollup/plugin-commonjs": "^29.0.0",
    "@rollup/plugin-json": "^6.1.0",
    "@rollup/plugin-node-resolve": "^16.0.3",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.3.0",
    "@types/node": "^24.10.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-jsdoc": "^61.1.12",
    "globals": "^16.5.0",
    "gvv": "^0.1.8",
    "husky": "^9.1.7",
    "jja": "^2.3.21",
    "lint-staged": "^16.2.6",
    "pjj": "^1.0.4",
    "prettier": "^3.6.2",
    "rollup": "^4.53.2",
    "rollup-plugin-cleanup": "^3.2.1",
    "rollup-plugin-copy": "^3.5.0",
    "tslib": "^2.8.1",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.3",
    "vjj": "^1.0.11"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@qqi/log": "^0.1.1",
    "a-command": "^2.3.16",
    "a-js-tools": "^1.0.12",
    "a-node-tools": "^4.2.20",
    "a-type-of-js": "^1.0.7",
    "color-pen": "^2.0.13",
    "colored-table": "^0.1.0",
    "qqi": "^0.1.2"
  }
}
